<?xml version="1.0" encoding="utf-8"?>
<!--
    Data extraction rules for Android 12+ backup configuration.
    Specifies what data should be included/excluded from cloud and device-to-device transfer.
-->
<data-extraction-rules>
    <!-- Cloud backup configuration -->
    <cloud-backup>
        <!-- Include user data -->
        <include domain="database" path="riposte.db" />
        <include domain="file" path="memes/" />
        <include domain="sharedpref" path="riposte_preferences.preferences_pb" />
        
        <!-- Exclude temporary database files (cache is automatically excluded) -->
        <exclude domain="database" path="riposte.db-journal" />
        <exclude domain="database" path="riposte.db-wal" />
        <exclude domain="database" path="riposte.db-shm" />
    </cloud-backup>
    
    <!-- Device-to-device transfer (allows all by default) -->
    <device-transfer>
        <include domain="database" path="riposte.db" />
        <include domain="file" path="memes/" />
        <include domain="sharedpref" path="riposte_preferences.preferences_pb" />
        
        <exclude domain="database" path="riposte.db-journal" />
        <exclude domain="database" path="riposte.db-wal" />
        <exclude domain="database" path="riposte.db-shm" />
    </device-transfer>
</data-extraction-rules>
