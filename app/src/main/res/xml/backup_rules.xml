<?xml version="1.0" encoding="utf-8"?>
<!--
    Full backup content configuration for Android 11 and below.
    Specifies what data should be included/excluded from cloud backup.
-->
<full-backup-content>
    <!-- Include -->
    <include domain="database" path="riposte.db" />
    <include domain="file" path="memes/" />
    <include domain="sharedpref" path="riposte_preferences.preferences_pb" />
    
    <!-- Exclude temporary database files (cache is automatically excluded) -->
    <exclude domain="database" path="riposte.db-journal" />
    <exclude domain="database" path="riposte.db-wal" />
    <exclude domain="database" path="riposte.db-shm" />
</full-backup-content>
